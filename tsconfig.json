{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "lib": ["es5", "es2015"],
    "baseUrl": "./",
    "paths": {
      "utils": ["./src/utils"],
      "config": ["./src/config.ts"],
      "types": ["./src/types"],
      "models": ["./src/db/models"],
      "handlers": ["./src/db/handlers"],
      "controllers": ["./src/controllers"],
      "components": ["./src/components"],
      "constant": ["./src/constant"],
      "libs": ["./src/libs"],
      "modules": ["./src/modules"]
    }
  },
  "include": ["./src/**/*"]
}
